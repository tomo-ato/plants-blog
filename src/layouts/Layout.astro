---
import SiteNav from '../components/SiteNav.astro';

interface Props {
  title: string;
  maxWidth?: string;
}
const { title, maxWidth = '800px' } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.webp" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <SiteNav />
    <main class="page-content" style={`max-width: ${maxWidth};`}>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  body {
    font-family: 'Noto Sans JP', sans-serif;
    line-height: 1.8;
    margin: 0;
  }
  .page-content {
    margin: 0 auto;
    padding: 20px;
  }
  h1 {
    border-bottom: 2px solid #ccc;
    padding-bottom: 10px;
    margin-bottom: 30px;
  }
  h2, h3, h4 {
    margin-top: 30px;
    margin-bottom: 15px;
    color: #333;
  }
  nav.breadcrumb {
    font-size: 0.85em;
    color: #999;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 2px;
  }
  nav.breadcrumb a {
    color: #0066cc;
    text-decoration: none;
  }
  nav.breadcrumb a:hover {
    text-decoration: underline;
  }
  nav.breadcrumb .sep {
    margin: 0 4px;
    color: #ccc;
  }
  nav.breadcrumb .current {
    color: #666;
  }
  .back-link {
    display: inline-block;
    margin-bottom: 20px;
    color: #0066cc;
    text-decoration: none;
  }
  .content {
    margin-bottom: 40px;
  }
  .content p {
    margin: 10px 0;
  }
  .content img {
    display: block;
    max-width: 800px;
    width: 100%;
    height: auto;
    margin: 20px auto;
    border-radius: 5px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
  .content figure {
    max-width: 800px;
    margin: 20px auto;
  }
  .content figure img {
    margin: 0;
    width: 100%;
  }
  .content figcaption {
    font-size: 0.82em;
    color: #999;
    margin-top: 6px;
    text-align: left;
  }
  .content figcaption a {
    color: #0066cc;
    text-decoration: underline;
    background: none;
    padding: 0;
  }
  .content img.scrapbox-icon {
    height: 1.3em;
    width: auto;
    max-width: none;
    margin: 0 2px;
    border-radius: 0;
    box-shadow: none;
    display: inline;
    vertical-align: middle;
    position: relative;
    top: -0.1em;
  }
  .content li {
    list-style: none;
    padding: 5px 0;
  }
  .content a {
    color: #0066cc;
    text-decoration: none;
  }
  .content a:hover {
    text-decoration: underline;
  }
  .content .internal-link {
    color: #0066cc;
    background: #f0f8ff;
    padding: 2px 6px;
    border-radius: 3px;
  }
  .content .tag {
    color: #666;
    background: #f5f5f5;
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 0.9em;
  }
  .meta {
    color: #666;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
    font-size: 0.9em;
  }
</style>
