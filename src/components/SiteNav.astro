---
const pathname = Astro.url.pathname;

const navItems = [
  { label: 'トップ', href: '/' },
  { label: 'Tillandsia', href: '/genus/tillandsia' },
  { label: 'Oxalis', href: '/genus/oxalis' },
  { label: 'Lepanthes', href: '/genus/lepanthes' },
  { label: 'Avonia', href: '/genus/avonia' },
  { label: 'Article', href: '/article' },
  { label: 'About', href: '/about' },
];

function isActive(href: string): boolean {
  if (href === '/') return pathname === '/';
  return pathname.startsWith(href);
}
---

<nav class="site-nav">
  <button class="hamburger" aria-label="メニューを開く" aria-expanded="false">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <ul class="nav-list">
    {navItems.map((item) => (
      <li>
        <a href={item.href} class={isActive(item.href) ? 'active' : ''}>
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  /* ===== モバイルファースト（基本 = SP） ===== */

  .site-nav {
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 24px;
  }

  /* ハンバーガーボタン: SP では表示 */
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    padding: 8px;
    margin: 4px 0;
    background: none;
    border: none;
    cursor: pointer;
  }
  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background: #444;
    border-radius: 2px;
    transition: transform 0.2s, opacity 0.2s;
  }
  .hamburger[aria-expanded="true"] span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  .hamburger[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }
  .hamburger[aria-expanded="true"] span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ナビリスト: SP では閉じた状態 */
  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
    flex-direction: column;
    border-top: 1px solid #e0e0e0;
  }
  .nav-list.open {
    display: flex;
  }
  .nav-list li a {
    display: block;
    padding: 12px 16px;
    color: #444;
    text-decoration: none;
    font-size: 0.95em;
    border-bottom: 1px solid #f0f0f0;
  }
  .nav-list li a:hover {
    color: #0066cc;
  }
  .nav-list li a.active {
    color: #0066cc;
    background: #f0f8ff;
  }

  /* ===== PC（601px 以上） ===== */
  @media (min-width: 601px) {
    .hamburger {
      display: none;
    }
    .nav-list {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      border-top: none;
    }
    .nav-list li a {
      display: inline-block;
      padding: 10px 14px;
      font-size: 0.88em;
      border-bottom: 2px solid transparent;
    }
    .nav-list li a.active {
      background: none;
      border-bottom-color: #0066cc;
    }
  }
</style>

<script>
  const btn = document.querySelector('.hamburger') as HTMLButtonElement;
  const list = document.querySelector('.nav-list') as HTMLElement;

  btn?.addEventListener('click', () => {
    const isOpen = list.classList.toggle('open');
    btn.setAttribute('aria-expanded', String(isOpen));
  });
</script>
